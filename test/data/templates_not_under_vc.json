{
  "vars": {
    "MYSQL_HOST": "localhost",
    "MYSQL_USER": "magento_github_user",
    "MYSQL_PASSWORD": "s8pTo3X5QCsr4SkY48zF",
    "MYSQL_DBNAME": "magento_github_db",
    "DEPLOYMENT_TYPE": "pilot"
  },
  "templates": {
    "local.xml": {
      "src": "test/tmpl/local.xml",
      "dst": "test/mage/app/etc/local.xml",
      "events": "post-install-cmd",
      "rewrite": true
    },
    "dump.sh": {
      "src": "test/tmpl/dump.sh",
      "dst": "test/bin/dump_db/dump.sh",
      "rewrite": true,
      "events": [
        "post-install-cmd",
        "post-update-cmd"
      ]
    },
    "entry w/o src": {
      "dst": "dst",
      "events": [
        "post-update-cmd"
      ]
    },
    "entry w/o dst": {
      "src": "src",
      "events": []
    },
    "entry w/o events": {
      "src": "src",
      "dst": "dst"
    },
    "entry with empty events array": {
      "src": "src",
      "dst": "dst",
      "events": []
    },
    "entry with empty event": {
      "src": "src",
      "dst": "dst",
      "events": ""
    },
    "entry with condition": {
      "src": "src",
      "dst": "dst",
      "events": ["post-status-cmd"],
      "condition": {
        "var": "DEPLOYMENT_TYPE",
        "operation": "=",
        "value": "pilot"
      }
    }
  }
}